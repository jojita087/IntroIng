#Enlace de html a python (app.py)
from flask import Flask, render_template

app = Flask(__name__)

@app.route('/')
def index():
    return render_template('index.html')

if __name__ == '__main__':
    app.run(debug=True)
  ------------------------------------------------
 #Este es el codigo fuente de la pagina (index.html)
  <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interfaz Python</title>
    <style>
        body {
            background-color: #0addbade; /* Cambia este valor al color deseado */
        }
        h1 {
            position: relative; /* Establece la posición relativa */
            left: 88%; /* Desplaza el h1 hacia la derecha en relación con su posición original */
            transform: translateX(-50%); /* Centra horizontalmente el h1 */
            margin-top: 250px; /* Añade espacio verticalmente para h1 */
        }
        body {
        p {
            position: relative; /*Establace la posicion relativa para p*/
            Left: 100%; /* Desplaza p hacia la derecha en relacion con su posicion original*/
            transform: translateX(-60%); /*Centra horizontalmente el h1*/
            margin-top: 200px; /*Añade espacio verticalmente para h1*/
        }
        }
    </style>
</head>
<body>
    <h1>Esta es nuestra pagina para la receta</h1>
    <p>Esta es una página web generada por Flask y enlazada con Python.</p>
</body>
</html>
